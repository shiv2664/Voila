            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_marginStart="15dp"
                    android:gravity="start"
                    android:id="@+id/order_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@{`Order Quantity : `+notificationItem.quantity}" />

                <TextView
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:id="@+id/price_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@{`Total : â‚¹`+notificationItem.price+` `}" />

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                android:visibility="@{notificationItem.status==`Pending`?View.VISIBLE:View.GONE}"-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/AcceptLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/Reject"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="59dp"
                        android:text="Reject"
                        android:textColor="@color/selected_icon"
                        android:textSize="15sp"
                        app:cornerRadius="10dp" />

                    <!--                android:visibility="@{notificationItem.status!=`Pending`?View.INVISIBLE:View.VISIBLE}"-->
                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/Accept"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Accept"
                        android:onClick="@{(button)->listener.onAcceptClick(notificationItem,Reject,Accept,Cancelled,Ready,AcceptLayout,ReadyLayout,WaitingLayout,DeliveredLayout)}"
                        android:textSize="15sp"
                        android:background="@drawable/backgroundgreen"
                        app:backgroundTint="@null"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="10dp" />

                </LinearLayout>

<!--                android:visibility="@{notificationItem.status==`Accepted`?View.VISIBLE:View.GONE}"-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ReadyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/Cancelled"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="59dp"
                        android:text="Cancel"
                        android:textColor="@color/selected_icon"
                        android:textSize="15sp"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/Ready"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Order Ready"
                        android:onClick="@{(button)->listener.onOrderReadyClick(notificationItem,Cancelled,Ready,WaitingList,AcceptLayout,ReadyLayout,WaitingLayout,DeliveredLayout)}"
                        android:textSize="15sp"
                        android:background="@drawable/backgroundgreen"
                        app:backgroundTint="@null"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="10dp" />

                </LinearLayout>

<!--                android:visibility="@{notificationItem.status==`Waiting`?View.VISIBLE:View.GONE}"-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/WaitingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/CancelWait"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="59dp"
                        android:text="Cancel"
                        android:textColor="@color/selected_icon"
                        android:textSize="15sp"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/WaitingList"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Waiting"
                        android:onClick="@{(button)->listener.onWaitingClicked(notificationItem,AcceptLayout,ReadyLayout,WaitingLayout,DeliveredLayout)}"
                        android:textSize="15sp"
                        android:background="@drawable/backgroundblue"
                        app:backgroundTint="@null"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DeliveredLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.button.MaterialButton
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/Delivered"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Delivered"
                        android:textSize="15sp"
                        android:background="@drawable/backgroundgreen"
                        app:backgroundTint="@null"
                        android:textColor="@color/colorWhite"
                        app:cornerRadius="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>