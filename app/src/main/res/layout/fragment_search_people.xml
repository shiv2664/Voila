<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.android.testproject1.interfaces.IMainActivity" />

        <import type="java.util.List"/>
        <import type="com.android.testproject1.model.Users"/>

        <variable
            name="userList"
            type="List&lt;com.android.testproject1.model.Users>"/>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/FindPeopleSearchView"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Find"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5sp"
            app:bindSearchPeopleRecyclerview="@{userList}"
            android:id="@+id/searchPeopleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>