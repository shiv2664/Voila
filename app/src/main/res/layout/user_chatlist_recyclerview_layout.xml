<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userItem"
            type="com.android.testproject1.room.enteties.UsersRoomEntity" />

        <variable
            name="listener"
            type="com.android.testproject1.IMainActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/greyprofile"
        android:layout_marginEnd="4dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person3"
                android:layout_marginTop="5dp"
                android:layout_weight="1"/>


            <RelativeLayout
                android:onClick="@{()->listener.onGroupItemClick(userItem)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="UserName"
                    android:text="@{userItem.name}"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#636363"
                    android:layout_centerVertical="true" />

                <TextView
                    android:hint="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username"
                    android:layout_marginTop="8dp"
                    android:paddingTop="10dp"
                    android:id="@+id/last_msg"
                    android:layout_marginStart="10dp"
                    android:maxLines="1" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:civ_border_width="10dp"
                    app:civ_border_color="#4AC948"
                    android:elevation="4dp"
                    android:id="@+id/img_on"
                    android:visibility="gone"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@id/username"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="-15dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:civ_border_width="10dp"
                    app:civ_border_color="#bfbfbf"
                    android:elevation="4dp"
                    android:id="@+id/img_off"
                    android:visibility="gone"
                    android:src="@mipmap/ic_launcher"
                    android:layout_below="@id/username"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="-15dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            style="@style/profileDetailsView"
            android:layout_marginTop="65dp"
            android:background="@color/lightgrey"
            android:layout_marginStart="50dp"/>

    </RelativeLayout>
</layout>