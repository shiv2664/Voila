<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary">

        <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/imageViewFrame"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/cardbackground" />

                <FrameLayout
                    android:id="@+id/imageViewFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop"
                        android:transitionName="img"
                        android:visibility="visible"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottiViewProfile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/loading_circle"
                        app:lottie_loop="true" />


                </FrameLayout>

                <!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:id="@+id/imageView"-->
<!--                    android:layout_width="120dp"-->
<!--                    android:layout_height="120dp"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_marginTop="5dp" />-->

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewFrame"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignTop="@+id/imageViewFrame"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_toStartOf="@+id/imageViewFrame"
                    android:orientation="vertical">



                    <ImageButton
                        android:id="@+id/editImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="72dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_baseline_edit_24" />

                    <TextView
                        android:id="@+id/editProfileBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ln1_Opened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignTop="@+id/imageViewFrame"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_toStartOf="@+id/imageViewFrame"
                    android:orientation="vertical">



                    <ImageButton
                        android:id="@+id/editImageButton_Opened"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="72dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_baseline_block_24" />

                    <TextView
                        android:id="@+id/BlockOpened"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Block"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignTop="@+id/imageViewFrame"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_toEndOf="@+id/imageViewFrame"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/savedImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="72dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        app:srcCompat="@drawable/ic_baseline_bookmark_border_24"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/saved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Saved"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ln2Opened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view"
                    android:layout_alignTop="@+id/imageViewFrame"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_toEndOf="@+id/imageViewFrame"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/CallImageOpened"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="72dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        app:srcCompat="@drawable/ic_baseline_call_24"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/CallOpened"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Call"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/friend_sent"
                    android:textSize="17sp"
                    android:textColor="?colorAccent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/friend_no"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Send Friend Request"
                    android:textColor="?android:textColorPrimary"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/friend_yes"
                    android:text="Unfriend"
                    android:textColor="?android:textColorPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/Offers"
                    android:text="Offers"
                    android:textColor="?android:textColorPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/friend_req"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/accept"
                        android:text="Accept"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_margin="5dp"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="?colorAccent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/decline"
                        android:text="Decline"
                        android:layout_margin="5dp"
                        android:textAllCaps="false"
                        android:textColor="?android:textColorPrimary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </FrameLayout>

<!--            <Button-->
<!--                android:id="@+id/editProfileBtn"-->
<!--                android:layout_gravity="center"-->
<!--                style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#757575"-->
<!--                android:text="Edit Profile"-->
<!--                android:gravity="center"-->
<!--                android:textAllCaps="false"-->
<!--                android:textSize="16sp" />-->

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/sendMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="@drawable/cardbackground"
                android:text="Message"/>

<!--            <Button-->
<!--                android:layout_marginStart="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:id="@+id/savedImage"-->
<!--                android:text="Saved"-->
<!--                android:textColor="?android:textColorPrimary"-->
<!--                style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--                android:textAllCaps="false"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->


            <androidx.cardview.widget.CardView
                android:id="@+id/bio_card"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                style="@style/Widget.MaterialComponents.CardView"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:text="Bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contact_details"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                style="@style/Widget.MaterialComponents.CardView"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="Contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="+91123654789"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ab2@gmail.com"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</layout>




