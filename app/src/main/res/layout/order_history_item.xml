<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="notificationItem"
            type="com.android.testproject1.room.enteties.OrdersRoomEntity" />

        <variable
            name="listener"
            type="com.android.testproject1.interfaces.IMainActivity" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderplacedtimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="15sp"
                android:layout_marginEnd="15dp"
                android:textStyle="bold"
                android:text="@{notificationItem.timestamp.toLocaleString()}" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentContainerRl"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

<!--                <de.hdodenhof.circleimageview.CircleImageView-->
<!--                    android:id="@+id/image"-->
<!--                    android:layout_width="45dp"-->
<!--                    android:layout_height="45dp"-->
<!--                    android:layout_alignParentStart="true"-->
<!--                    android:layout_marginStart="15dp"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:layout_marginBottom="15dp" />-->

                <FrameLayout
                    android:id="@+id/imageFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->listener.onUserNamePicClick(notificationItem.orderFrom,notificationItem.orderTo)}"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentStart="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottiViewProfile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loading_circle" />

                </FrameLayout>

                <!--            android:onClick="@{()->listener.onNotificationItemClick(notificationItem)}"-->
                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/type_image"
                    android:layout_toEndOf="@+id/imageFrame"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="@{notificationItem.username}"
                            android:onClick="@{()->listener.onUserNamePicClick(notificationItem.orderFrom,notificationItem.orderTo)}"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/title"
                            android:text="(+911234567890)"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{notificationItem.message}" />

                    <TextView
                        android:id="@+id/body_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{notificationItem.orderName}"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="end"
                        app:setDate="@{notificationItem.deliveryTime}" />

                </LinearLayout>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/type_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_notifications_black_24dp" />

            </RelativeLayout>

            <!--            <LinearLayout-->
            <!--                android:id="@+id/buttons_layout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical">-->

            <!--                &lt;!&ndash;                app:backgroundTint="?attr/colorAccent"&ndash;&gt;-->
            <!--                <com.google.android.material.button.MaterialButton-->
            <!--                    android:layout_marginStart="15dp"-->
            <!--                    android:layout_marginEnd="15dp"-->
            <!--                    android:id="@+id/Accept"-->
            <!--                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginTop="5dp"-->
            <!--                    android:text="Accept"-->
            <!--                    android:background="@drawable/backgroundgreen"-->
            <!--                    app:backgroundTint="@null"-->
            <!--                    android:textColor="@color/colorWhite"-->
            <!--                    app:cornerRadius="10dp" />-->

            <!--                <com.google.android.material.button.MaterialButton-->
            <!--                    android:layout_marginStart="15dp"-->
            <!--                    android:layout_marginEnd="15dp"-->
            <!--                    android:layout_marginTop="5dp"-->
            <!--                    android:layout_marginBottom="12dp"-->
            <!--                    android:id="@+id/Reject"-->
            <!--                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Reject"-->
            <!--                    android:textColor="@color/colorWhite"-->
            <!--                    android:background="@drawable/backgroundred"-->
            <!--                    app:backgroundTint="@null"-->
            <!--                    app:cornerRadius="10dp" />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_marginStart="15dp"
                    android:gravity="start"
                    android:id="@+id/order_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@{`Order Quantity : `+notificationItem.quantity}" />

                <TextView
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:id="@+id/price_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@{`Total : â‚¹`+notificationItem.price+` `}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Pending"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pending"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundgreen"
                    app:backgroundTint="@null"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Accepted"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Accepted"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundgreen"
                    app:backgroundTint="@null"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Waiting"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Waiting"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundblue"
                    app:backgroundTint="@null"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Delivered"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Delivered"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundgreen"
                    app:backgroundTint="@null"
                    android:textColor="@color/colorWhite"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Reject"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:text="Rejected"
                    android:textColor="@color/selected_icon"
                    android:textSize="15sp"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/Cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="59dp"
                    android:text="Cancelled"
                    android:textColor="@color/selected_icon"
                    android:textSize="15sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>