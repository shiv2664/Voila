<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.android.testproject1.interfaces.IMainActivity" />

        <import type="java.util.List"/>
        <import type="com.android.testproject1.room.enteties.UsersChatListEntity"/>

        <variable
            name="userList"
            type="List&lt;UsersChatListEntity>"/>

    </data>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchViewGroups"
                    app:queryHint="Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detailsRecyclerview"
                    android:layout_marginStart="4dp"
                    app:bindDetailsRecyclerView="@{userList}"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:padding="4dp"
            android:id="@+id/extendedFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/segoe_ui_regular"
            android:backgroundTint="?attr/colorAccent"
            android:textColor="@color/colorTextWhite"
            app:iconTint="@color/white"
            android:text="Create"
            app:icon="@drawable/ic_baseline_people_outline_24"
            android:layout_marginBottom="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</layout>