<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="productitem2"
            type="com.android.testproject1.model.ProductExplore" />

        <variable
            name="listener"
            type="com.android.testproject1.IMainActivity" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img"
                    app:backgroundImage="@{productitem2.image}"
                    android:transitionName="img"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/shadow_bottom"
                    android:background="@drawable/bottom_shadow"
                    android:layout_alignBottom="@id/img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/prograss_load_photo"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--            <TextView-->
                <!--                android:id="@+id/author"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="30dp"-->
                <!--                android:drawablePadding="10dp"-->
                <!--                android:ellipsize="end"-->
                <!--                android:maxLines="1"-->
                <!--                android:singleLine="true"-->
                <!--                android:layout_marginRight="160dp"-->
                <!--                android:text="Author"-->
                <!--                android:gravity="bottom"-->
                <!--                android:layout_alignLeft="@+id/title"-->
                <!--                android:layout_alignStart="@+id/title"-->
                <!--                android:layout_alignRight="@id/layoutDate"-->
                <!--                android:layout_alignTop="@+id/layoutDate"-->
                <!--                android:layout_alignEnd="@id/layoutDate"/>-->


                <RelativeLayout
                    android:paddingBottom="5dp"
                    android:layout_alignStart="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/person3" />

                    <RelativeLayout
                        android:layout_toEndOf="@+id/profileImage"
                        android:layout_toStartOf="@+id/locationLayout"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="1dp"
                        android:paddingEnd="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_baseline_star_24"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_baseline_star_24"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_baseline_star_24"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_baseline_star_24"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_baseline_star_24"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/Ratings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="32"
                                    android:textColor="@color/colorTextWhite"
                                    android:textSize="16sp"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/locationLayout"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_white"
                        android:padding="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:src="@drawable/ic_location_24dp"
                            android:onClick="@{()->listener.onLocationClick()}"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:textColor="#606060"
                            android:onClick="@{()->listener.onLocationClick()}"
                            android:id="@+id/publishedAt"
                            android:layout_marginStart="27dp"
                            android:layout_marginEnd="10dp"
                            android:text="Panipat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/img">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:text="Amrik Sukhdev"
                        android:textSize="20sp"

                        android:id="@+id/title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:text="Four Special Thali at only Rs.499 "
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/title"
                        android:id="@+id/offer" />

                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/offer"
                        android:layout_marginTop="5dp"
                        app:trimMode="trimModeLine"
                        app:trimLines="5"
                        android:text="Desc : This is Desc Desc : This is Desc Desc : This is DescDesc : This is DescDesc : This is DescDesc : This is DescDesc : This is DescDesc : This is Desc  : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc : This is Desc  " />

                    <TextView
                        android:id="@+id/source"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/desc"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Pay" />





                    <TextView
                        android:visibility="invisible"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="20dp"
                        android:layout_below="@id/desc"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:maxLines="1"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Join/Create group" />


                </RelativeLayout>






            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>
</layout>